#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManager:
    transition: FadeTransition()

    MainScreen
    BattleScreen


<MainScreen>:
    name: 'main'

    Button:
        text: 'Start'
        font_size: 8
        on_release: app.root.current = 'battle'


<BattleScreen>:
    name: 'battle'

    CircularButton:
        pos_hint: {'center_x': 1, 'center_y': 0}
        radius: '200 dp'

    CircularButton:
        pos_hint: {'center_x': 1, 'center_y': 0}
        radius: '100 dp'
        color: 1, 0, 0


<GambozinoWidget>:

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "LABEL"

        ProgressBar:
            id: hp
            value: 100


<CircularButton>:
    radius: 50
    color: .5, .5, .5

    canvas:
        Color:
            rgb: root.color

        Ellipse:
            pos: self.pos
            size: 2*root.radius, 2*root.radius

    size_hint: None, None
    size: 2*root.radius, 2*root.radius
